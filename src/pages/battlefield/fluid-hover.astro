---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'venger.me - Wishlist',
  noindex: true,
};
const imageIds = [
  '1500462918059-b1a0cb512f1d',
  '1531581147762-5961e6e2e6b1',
  '1626204327506-0d3ee11d7752',
  '1549068106-b024baf5062d',
];
---

<Layout metadata={metadata}>
  <div class="grid min-h-screen place-items-center">
    <ul class="flex w-full max-w-6xl gap-4">
      {
        imageIds.map((id, index) => (
          <li
            key={index}
            class="group relative inset-0 h-[500px] w-full flex-1 overflow-hidden rounded-2xl bg-rose-300 transition-all hover:grow-[1.25]"
          >
            <img
              class="absolute h-full w-full object-cover"
              src={`https://images.unsplash.com/photo-${id}?w=800&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mnx8dmlicmFudHxlbnwwfHwwfHx8MA%3D%3D`}
            />
            <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/70 from-30% p-4">
              <div class="w-48">
                <h2 class="text-2xl font-bold text-white">The card title is here.</h2>
                <div class="grid grid-rows-[0fr] transition-all group-hover:grid-rows-[1fr]">
                  <p class="mt-2 overflow-hidden text-white/70 opacity-0 transition duration-500 group-hover:opacity-100">
                    Lorem ipsum dolor sit, amet consectetur adipisicing elit. Minima quia ipsa eius.
                  </p>
                </div>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
  </div>
</Layout>
